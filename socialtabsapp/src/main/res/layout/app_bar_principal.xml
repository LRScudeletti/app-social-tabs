<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tPrincipal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tlPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/corBranco"
            app:tabMode="scrollable" />

    </android.support.design.widget.AppBarLayout>

    <br.com.lrssoftwares.socialtabs.CustomViewPagerClass
        android:id="@+id/vpPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <br.com.lrssoftwares.socialtabs.BotaoFlutuanteActivity
        android:id="@+id/btnBotaoFlutuante"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="20sp"
        android:scaleType="center"
        android:src="@drawable/botao_flutuante_icone"
        android:visibility="gone" />

</android.support.design.widget.CoordinatorLayout>